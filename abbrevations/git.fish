#------------------------------------------------------------------
# Two Liners 
#------------------------------------------------------------------
abbr --add gf   "git fetch"
abbr --add gp   "git push"
abbr --add gP   "git pull"
abbr --add ga   "git add"
abbr --add gb   "git branch"
abbr --add gc   "git checkout"
abbr --add gC   "git commit"
abbr --add gs   "git status"
abbr --add gl   "git log -n 1"

abbr --add gd   "git diff"
abbr --add gds   "git diff --staged"

#------------------------------------------------------------------
# Commit 
#------------------------------------------------------------------
abbr --add gn       "git commit"
abbr --add gcm      "git commit"
abbr --add gca      "git commit --amend --no-edit"
abbr --add gce      "git commit --amend"
abbr --add gc.      "git add . && git commit --amend --no-edit"

#------------------------------------------------------------------
# Reset 
#------------------------------------------------------------------
abbr --add grh      "git reset HEAD^"
abbr --add gr.      "git reset ."

#------------------------------------------------------------------
# Other
#------------------------------------------------------------------
abbr --add gcl  "git clone"
abbr --add gln  "git log --name-only"
abbr --add gim  "git-is-merged"
abbr --add gc-   "git checkout -"


